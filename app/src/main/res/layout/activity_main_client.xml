<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TabHost
        android:id="@+id/main_client_tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/main_admin_linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/main_client_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/toolbar_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3.0dip"
                android:paddingTop="3.0dip" >

                <RadioButton
                    android:id="@+id/main_client_radio_button1"
                    style="@style/toolbar_button_style"
                    android:drawableTop="@drawable/icon_course_selector"
                    android:checked="true"
                    android:text="@string/bottom_my_course" />

                <RadioButton
                    android:id="@+id/main_client_radio_button2"
                    style="@style/toolbar_button_style"
                    android:drawableTop="@drawable/icon_exam_selector"
                    android:text="@string/bottom_all_course" />

                <RadioButton
                    android:id="@+id/main_client_radio_button3"
                    style="@style/toolbar_button_style"
                    android:drawableTop="@drawable/icon_my_selector"
                    android:text="@string/icon_my" />
            </RadioGroup>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_above="@id/main_client_group"
                android:layout_alignParentTop="true"
                android:background="#fff5f5f5" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:layout_above="@id/main_client_group"
                android:background="@mipmap/bottom_bar_shadow" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </RelativeLayout>
    </TabHost>

</RelativeLayout>