<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <include
        android:id="@+id/manager_score_user_detail_head"
        layout="@layout/include_back_title_item_layout" />

    <include
        android:id="@+id/loading_failed"
        layout="@layout/layout_loading_failed"
        android:layout_width="fill_parent"
        android:layout_height="38dip" />

    <include
        android:id="@+id/network_unusable"
        layout="@layout/layout_network_unusable"
        android:layout_width="fill_parent"
        android:layout_height="38dip" />

    <ScrollView
        android:id="@+id/mycourse_judge_detail_fill_contentscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/contentrealm"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:shrinkColumns="0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_contentapplicability_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_contentapplicability_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_ContentRationality_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_contentRationality_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_Discussion_textView"/>
                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_discussion_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_TimeRationality_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_timerationality_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_ContentUnderstanding_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_contentunderstanding_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_ExpressionAbility_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_expressionability_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_Communication_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_communication_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />

                <TableRow>
                    <TextView
                        android:layout_height="@dimen/icon_listitem_height"
                        style="@style/judge_rating_text_style"
                        android:text="@string/activity_mycourse_judge_detail_fill_Organization_textView"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/mycourse_judge_detail_fill_organization_ratingbar"
                            style="@style/judge_rating_bar_style"
                            android:layout_centerInParent="true"
                            android:numStars="@integer/judgeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_interval_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listitem_interval_gray" />
            </TableLayout>

            <TextView
                style="@style/text_view_style"
                android:layout_marginLeft="@dimen/item_smallhorizontalmargin"
                android:text="@string/activity_mycourse_judge_detail_fill_ComprehensiveEvaluation_textView"/>

            <EditText
                android:id="@+id/mycourse_judge_detail_fill_comprehensiveevaluation_edittext"
                android:isScrollContainer="true"
                style="@style/muliLine_text_style"
                android:background="@color/background_unused_gray"/>

            <TextView
                style="@style/text_view_style"
                android:layout_marginLeft="@dimen/item_smallhorizontalmargin"
                android:text="@string/activity_mycourse_judge_detail_fill_Suggestion_textView"/>

            <EditText
                android:id="@+id/mycourse_judge_detail_fill_suggestion_edittext"
                android:isScrollContainer="true"
                style="@style/muliLine_text_style"
                android:layout_marginBottom="@dimen/listitem_margin_height_big"
                android:background="@color/background_unused_gray"/>

            <Button
                android:id="@+id/mycourse_judge_detail_fill_confirmbutton"
                style="@style/confim_button_style"
                android:text="@string/judge_button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
