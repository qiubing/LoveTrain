<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.nubia.activity.admin.ManagerExamInputScoreActivity">

    <RelativeLayout
        android:id="@+id/manager_exam_score_input_layout"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip">

        <TextView
            android:id="@+id/manager_exam_score_input_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/title_activity_manager_score_input"
            android:textColor="@color/grayslate"
            android:textSize="22.0sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/manager_exam_score_input_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manager_exam_score_input_layout"></ListView>

</RelativeLayout>
