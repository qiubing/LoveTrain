<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlecon"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@color/soft_comment_title_content_windows" >

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        android:onClick="back"
        android:src="@mipmap/ic_back"  />

    <TextView
        android:id="@+id/sub_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/grayslate"
        android:textSize="20.0sp" />

    <ImageView
        android:id="@+id/loading_iv"
        android:layout_width="@dimen/dp75"
        android:layout_height="@dimen/dp75"
        android:layout_toLeftOf="@+id/sub_page_title"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:src="@mipmap/dialog_loading"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/backupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="生成二维码"
        android:layout_centerVertical="true"
        android:textColor="@color/item_operation_download"
        android:visibility="gone"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        />

</RelativeLayout>