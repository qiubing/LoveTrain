<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/soft_comment_title_content_windows">

        <include
        android:id="@+id/manager_score_user_detail_head"
        layout="@layout/manager_head"
        android:layout_width="fill_parent"
        android:layout_height="50dp" />
    <TableLayout
        style="@style/contentrealm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow style="@style/itemtitle">
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/activity_my_accountmana_pswmodify_oldpsw_textview"-->
            <!--android:textSize="@dimen/jiangyu_itemname_textsize"/>-->
            <TextView
                style="@style/text_view_style"
                android:text="@string/activity_my_accountmana_pswmodify_oldpsw_textview" />


            <EditText
                android:id="@+id/my_accountmana_pswmodify_oldpswedittext"
                style="@style/edit_text_style"
                android:inputType="textPassword"
                android:hint="@string/activity_manager_add_exam_hint" />

        </TableRow>

        <TableRow style="@style/itemtitle">

            <TextView
                style="@style/text_view_style"
                android:text="@string/activity_my_accountmana_pswmodify_newpsw_textview" />

            <EditText
                android:id="@+id/my_accountmana_pswmodify_newpswedittext"
                style="@style/edit_text_style"
                android:hint="@string/activity_manager_add_exam_hint"
                android:inputType="textPassword" />
        </TableRow>

        <TableRow style="@style/itemtitle">

            <TextView
                style="@style/text_view_style"
                android:text="@string/activity_my_accountmana_pswmodify_confirmpsw_textview" />

            <EditText
                android:id="@+id/my_accountmana_pswmodify_newpswconfirmedittext"
                style="@style/edit_text_style"
                android:hint="@string/activity_manager_add_exam_hint"
                android:inputType="textPassword" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/my_accountmana_pswmodify_confirmbutton"
        style="@style/CustomBigLoginButton"
        android:text="@string/alterCourseForSure" />
</LinearLayout>