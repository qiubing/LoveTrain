<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_comment_title_content_windows"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_icon"
        android:layout_width="match_parent"
        android:layout_height="48.0dip" >

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:onClick="back"
            android:src="@drawable/back_button_xml" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85.0dip"
            android:layout_marginRight="85.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="头像设置"
            android:textColor="@color/grayslate"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_edit_head_portrait"
            style="@style/CustomBigOrangeButton"
            android:text="点击编辑头像" />

        <LinearLayout
            android:layout_width="160.0dip"
            android:layout_height="160.0dip"
            android:gravity="center"
            android:orientation="vertical" >

            <cn.nubia.component.CircleImageView
                android:id="@+id/image_view"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:layout_centerInParent="true"
                android:src="@mipmap/noavatar_small" />

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="160.0dip"
                android:layout_height="160.0dip"
                android:layout_gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_upload"
            style="@style/CustomBigLoginButton"
            android:text="上传头像" />
    </LinearLayout>

</LinearLayout>