<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/adapter_item_outside_layout_padding_style"
    android:layout_marginTop="0dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/item_inside_layout"
        style="@style/adapter_item_inside_layout_padding_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/item_layout_border" >

        <ImageView
            android:id="@+id/item_layout_imageview"
            style="@style/item_smart_icon_imageview_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_layout_title"
            style="@style/item_layout_title"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:text="java基础一"
            />

        <TextView
            android:id="@+id/evaluateBtn"
            style="@style/item_operation_attention_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待评价"
            />

        <TextView
            android:id="@+id/item_layout_content"
            style="@style/item_layout_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_layout_imageview"
            android:layout_toLeftOf="@id/evaluateBtn"
            android:paddingLeft="8dp"
            android:paddingTop="20dip"
            android:text="C-6室，8月24号 9:00~测试测试测试测试测试11:00，张三" />
    </RelativeLayout>

</RelativeLayout>