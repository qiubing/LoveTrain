<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title_icon"
        android:layout_height="48.0dip"
        android:layout_width="match_parent"
        android:background="@color/titlebar_bg">

        <ImageView
            android:layout_width="@dimen/text_size_20"
            android:layout_height="@dimen/text_size_20"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="9.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:onClick="back"
            android:src="@drawable/back_button_xml" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="85.0dip"
            android:layout_marginRight="85.0dip"
            android:singleLine="true"
            android:textColor="@color/grayslate"
            android:textSize="@dimen/text_size_20"
            android:text="意见反馈"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10.0dip" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_title"
                android:paddingLeft="12.0dip"
                android:paddingRight="10.0dip"
                android:text="欢迎您提出宝贵的意见和建议。"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/feedback_content"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:gravity="top"
                android:background="@drawable/item_bg"
                android:hint="请输入您的意见和建议(字数500以内)"
                android:maxLength="500" />

            <EditText
                android:id="@+id/feedback_email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/item_bg"
                android:hint="您的邮箱(选填)"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_submit"
                style="@style/CustomBigOrangeButton"
                android:text="提交" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>