<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/admin_personInfo_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="张三"
        android:textSize="36sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/admin_signIn_manage_disagreeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_alignParentRight="true"
            android:text="否决"
            android:textSize="36sp"
            />
        <Button
            android:id="@+id/admin_signIn_manage_agreeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_toStartOf="@id/admin_signIn_manage_disagreeButton"
            android:layout_toLeftOf="@+id/admin_signIn_manage_disagreeButton"
            android:text="同意"
            android:textSize="36sp"
            />

    </RelativeLayout>
</RelativeLayout>
