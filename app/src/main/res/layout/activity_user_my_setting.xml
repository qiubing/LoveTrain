<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_comment_title_content_windows"
    android:orientation="vertical">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="85.0dip"
        android:layout_marginRight="85.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="个人设置"
        android:textColor="@color/grayslate"
        android:textSize="25dp" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_padding_bottom">
        <!--android:background="@drawable/my_tab_background"-->
        <TextView
            android:id="@+id/check_in_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/my_list_txt_background"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_padding_bottom"
            android:paddingLeft="@dimen/text_padding_left"
            android:paddingTop="@dimen/text_padding_top"
            android:text="我的签到记录"
            android:textSize="@dimen/text_view_font_size" />

        <ImageView
            android:id="@+id/arrow_image_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/my_list_txt_background"
            android:paddingRight="@dimen/image_padding_right"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_padding_bottom">
        <!--android:background="@drawable/my_tab_background"-->
        <TextView
            android:id="@+id/course_integration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/my_list_txt_background"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_padding_bottom"
            android:paddingLeft="@dimen/text_padding_left"
            android:paddingTop="@dimen/text_padding_top"
            android:text="我的课程积分"
            android:textSize="@dimen/text_view_font_size" />

        <ImageView
            android:id="@+id/arrow_image_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/my_list_txt_background"
            android:paddingRight="@dimen/image_padding_right"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_padding_bottom">
        <!--android:background="@drawable/my_tab_background"-->
        <TextView
            android:id="@+id/exam_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/my_list_txt_background"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_padding_bottom"
            android:paddingLeft="@dimen/text_padding_left"
            android:paddingTop="@dimen/text_padding_top"
            android:text="我的考试"
            android:textSize="@dimen/text_view_font_size" />

        <ImageView
            android:id="@+id/arrow_image_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/my_list_txt_background"
            android:paddingRight="@dimen/image_padding_right"
            android:src="@mipmap/arrow" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_padding_bottom">
        <!--android:background="@drawable/my_tab_background"-->
        <TextView
            android:id="@+id/course_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/my_list_txt_background"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_padding_bottom"
            android:paddingLeft="@dimen/text_padding_left"
            android:paddingTop="@dimen/text_padding_top"
            android:text="我的课程分享"
            android:textSize="@dimen/text_view_font_size" />

        <ImageView
            android:id="@+id/arrow_image_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/my_list_txt_background"
            android:paddingRight="@dimen/image_padding_right"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_padding_bottom">
        <!--android:background="@drawable/my_tab_background"-->
        <TextView
            android:id="@+id/i_want_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/my_list_txt_background"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_padding_bottom"
            android:paddingLeft="@dimen/text_padding_left"
            android:paddingTop="@dimen/text_padding_top"
            android:text="我要分享"
            android:textSize="@dimen/text_view_font_size" />

        <ImageView
            android:id="@+id/arrow_image_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/my_list_txt_background"
            android:paddingRight="@dimen/image_padding_right"
            android:src="@mipmap/arrow" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_padding_bottom">
        <!--android:background="@drawable/my_tab_background"-->
        <TextView
            android:id="@+id/account_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/my_list_txt_background"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_padding_bottom"
            android:paddingLeft="@dimen/text_padding_left"
            android:paddingTop="@dimen/text_padding_top"
            android:text="账户设置"
            android:textSize="@dimen/text_view_font_size" />

        <ImageView
            android:id="@+id/arrow_image_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/my_list_txt_background"
            android:paddingRight="@dimen/image_padding_right"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />


    <Button
        android:id="@+id/btn_check_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="扫描二维码" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan result："
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/check_in_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_genrate_barcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="生成二维码" />

    <ImageView
        android:id="@+id/iv_qr_image_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

</LinearLayout>