<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_inside_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/class_item_heigh"
    android:background="@color/class_item_background_close">

    <View
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/class_item_space"></View>

    <ImageView
        android:id="@+id/admin_all_course_courseDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/class_item_padding_left"
        android:src="@mipmap/new_go" />

    <ImageView
        android:id="@+id/item_layout_imageview"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_course" />

    <TextView
        android:id="@+id/item_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="java基础"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_layout_imageview"
        android:textSize="@dimen/class_item_fontsize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/admin_all_course_courseDetailTextView"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_four"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="30dp">
        <TextView
            android:id="@+id/flag_courseType"
            style="@style/item_flag_attention_style"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:text="享" />

        <TextView
            android:id="@+id/flag_shareLevel"
            style="@style/item_flag_attention_style"
            android:layout_marginRight="5dp"
            android:background="@color/red"
            android:text="部" />

        <TextView
            android:id="@+id/flag_isTeacher"
            style="@style/item_flag_attention_style"
            android:layout_marginRight="5dp"
            android:background="@color/green"
            android:text="讲"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/flag_wetherExam"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/icon_exam_label" />
        </LinearLayout>

        <TextView
            android:id="@+id/class_signUpExamTextView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_gravity="left"
            android:singleLine="true"
            android:background="@color/item_operation_attention"
            android:gravity="center_vertical"
            android:text="报名考试"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize16" />
    </LinearLayout>


</RelativeLayout>