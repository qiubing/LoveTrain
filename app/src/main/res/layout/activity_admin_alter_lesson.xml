    <include
        android:id="@+id/sub_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        layout="@layout/include_back_title_item_layout" />

    <include
        android:layout_marginTop="10dp"
        android:id="@+id/loading_failed"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        layout="@layout/layout_loading_failed"
        />

    <include
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/manager_rate_paddingTop"
        android:id="@+id/network_unusable"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        layout="@layout/layout_network_unusable" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:stretchColumns="1"
        android:padding="15dp"
        android:paddingTop="20dp">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/courseName"
                android:textColor="#666666"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/alter_lesson_courseName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Java基础"
                android:textSize="20sp"
                android:selectAllOnFocus="true" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/lessonName"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_lessonName_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:selectAllOnFocus="true" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/teacherName"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_teacherName_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:selectAllOnFocus="true" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/lessonDesc"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_lessonDesc_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:selectAllOnFocus="true" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/lessonLocation"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_lessonLocation_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:selectAllOnFocus="true"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="上课日期"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_lessonStartDate_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="false"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/lessonStartTime"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_lessonStartTime_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:selectAllOnFocus="true" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="下课时间"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_lessonEndTime_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="false"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/teacherGetPoints"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_teacherGetPoints_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:inputType="number"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/studentGetPoints"
                android:textColor="#666666"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/alter_lesson_studentGetPoints_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:inputType="number"/>

        </TableRow>


    </TableLayout>

    <Button android:id="@+id/admin_alter_lesson_alterForeSureButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:text="@string/alterLessonForSure"
        android:textSize="20sp"
        android:background="@color/common_green"
        />

</LinearLayout>