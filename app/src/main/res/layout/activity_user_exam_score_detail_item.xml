<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_inside_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/listitem_height"
    android:background="@color/background_white">

    <TextView
        android:id="@+id/exam_course_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listitem_margin_width"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listitem_height"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/listitem_textsize"
        android:textColor="@color/listitem_text_black"/>


    <TextView
        android:id="@+id/exam_score_one"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/listitem_margin_width"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/listitem_textsize"
        android:textColor="@color/listitem_text_green"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listitem_interval_height"
        android:layout_alignParentBottom="true"
        android:background="@color/listitem_interval_gray"/>

</RelativeLayout>