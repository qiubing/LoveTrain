<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_comment_title_content_windows">

    <include
        android:id="@+id/admin_unapproved_share_title"
        layout="@layout/include_back_title_item_layout"
        />

    <ScrollView
        android:id="@+id/scroll_list_approved"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/admin_unapproved_share_title">

        <LinearLayout
            style="@style/contentrealm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_coursename_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_name"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_courselevel_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_level"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_courselocale_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_locale"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_coursedate_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_date"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_coursestarttime_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_begin_time"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_courseendtime_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_end_time"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_my_sharecourse_detail_display_coursedescription_textView" />

            <TextView
                android:id="@+id/unapproved_share_course_description"
                style="@style/itemcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/item_normallverticalmargin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/button_gray_pressed"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="审核通过" />
                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/button_gray_pressed"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="否决" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>