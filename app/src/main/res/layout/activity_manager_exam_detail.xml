<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_comment_title_content_windows"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/sub_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        layout="@layout/include_back_title_item_layout" />

    <include
        android:id="@+id/loading_failed"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        layout="@layout/layout_loading_failed"
        android:layout_below="@+id/sub_title"
        />

    <include
        android:paddingTop="@dimen/manager_rate_paddingTop"
        android:id="@+id/network_unusable"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        layout="@layout/layout_network_unusable"
        android:layout_below="@+id/sub_title"/>

    <RelativeLayout
        android:id="@+id/layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_title"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="15sp"
        >

        <TextView
            android:id="@+id/course_name_title"
            style="@style/text_view_style"
            android:gravity="bottom"
            android:text="@string/activity_manager_exam_name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_name"
            style="@style/text_view_style"
            android:layout_below="@id/course_name_title"
            android:gravity="top"
            android:text="XXXXXXXX"
            android:textSize="20sp" />

        <Button
            android:id="@+id/manager_exam_menber"
            style="@style/CustomBigLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="xxx人报考"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout02"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="15sp">


        <TextView
            android:id="@+id/exam_introduction_title"
            style="@style/text_view_style"
            android:gravity="bottom"
            android:text="@string/activity_manager_exam_introduction"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/exam_introduction"
            style="@style/text_view_style"
            android:layout_below="@id/exam_introduction_title"
            android:gravity="top"
            android:text="XXXXXXXX"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout03"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="15sp">

        <TextView
            android:id="@+id/exam_info_title"
            style="@style/text_view_style"
            android:gravity="bottom"
            android:text="@string/activity_manager_exam_info"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/exam_info"
            style="@style/text_view_style"
            android:layout_below="@id/exam_info_title"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="XXXXXXXX"
            android:textSize="20sp" />

        <Button
            android:visibility="gone"
            android:layout_below="@+id/exam_info"
            android:id="@+id/manager_exam_enroll"
            style="@style/CustomBigLoginButton"
            android:layout_weight="1"
            android:text="@string/activity_manager_exam_enrollbtn" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <!--<Button-->
        <!--android:id="@+id/manager_exam_editbtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:text="@string/activity_manager_exam_editbtn"-->
        <!--android:textSize="15sp" />-->
        <Button
            android:id="@+id/manager_exam_editbtn"
            style="@style/CustomBigLoginButton"
            android:layout_weight="1"
            android:text="@string/activity_manager_exam_editbtn" />
        <!--<Button-->
        <!--android:id="@+id/manager_exam_deletebtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:text="@string/activity_manager_exam_deletebtn"-->
        <!--android:textSize="15sp" />-->
        <Button
            android:id="@+id/manager_exam_deletebtn"
            style="@style/CustomBigLoginButton"
            android:layout_weight="1"
            android:text="@string/activity_manager_exam_deletebtn" />
        <!--<Button-->
        <!--android:id="@+id/manager_exam_inputscorebtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:text="@string/activity_manager_exam_scorebtn"-->
        <!--android:textSize="15sp" />-->
        <Button
            android:id="@+id/manager_exam_inputscorebtn"
            style="@style/CustomBigLoginButton"
            android:layout_weight="1"
            android:text="@string/activity_manager_exam_scorebtn" />
    </LinearLayout>

</RelativeLayout>







