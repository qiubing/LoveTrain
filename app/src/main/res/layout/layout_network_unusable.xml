<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/network_error_background"
    android:gravity="center"
    >

    <RelativeLayout
        android:id="@+id/network_unused_layout"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/loading_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/clear_botton_s" />

        <TextView
            android:id="@+id/network_unused_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/loading_icon"
            android:gravity="center"
            android:singleLine="true"
            android:text="当前网络不可用，点击查看网络连接"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
