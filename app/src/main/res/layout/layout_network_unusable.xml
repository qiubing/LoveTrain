<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/hotsblogsbg"
    android:gravity="center"
    android:paddingBottom="8dip"
    android:paddingTop="5dip" >

    <RelativeLayout
        android:id="@+id/network_unused_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/loading_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/clear_botton_s" />

        <TextView
            android:id="@+id/network_unused_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/loading_icon"
            android:gravity="center"
            android:singleLine="true"
            android:text="世界上最遥远的距离就是没有网络。查看网络设置"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:text=">"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
