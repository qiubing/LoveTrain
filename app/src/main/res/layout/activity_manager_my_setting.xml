<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/soft_comment_title_content_windows"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/myProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/userinfo_profile_item" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/item_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/queryscore"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="成绩查询" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#dddbdb" />

                <TextView
                    android:id="@+id/querycredit"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="积分查询" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#dddbdb" />

                <TextView
                    android:id="@+id/ratemanage"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="评级管理" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#dddbdb" />

                <TextView
                    android:id="@+id/usermanage"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="用户管理" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#dddbdb" />

                <TextView
                    android:id="@+id/accountmanage"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="账号管理" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#dddbdb" />

                <TextView
                    android:id="@+id/about_us"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="关于我们" />
            </LinearLayout>

            <Button
                android:id="@+id/change_account"
                style="@style/CustomBigLoginButton"
                android:text="更换账号" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
