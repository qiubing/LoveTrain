<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/exan_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:id="@+id/title_all_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/item_exam"
            android:gravity="center"
            android:textSize="@dimen/item_text_size"
            android:textStyle="bold"
            android:textColorHighlight="@color/toolbar_text_color_normal"/>

        <ImageView
            android:id="@+id/item_exam_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/search_button"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/title_all_exam"
            android:layout_alignTop="@+id/title_all_exam"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thick"
            android:layout_alignParentBottom="true"
            android:background="@color/toolbar_bg" />

    </RelativeLayout>

    <cn.nubia.component.RefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exan_title"
        >
        <ListView
            android:id="@+id/admin_all_exam_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff4f7f9"
            android:divider="#ffd9dd9c"
            android:dividerHeight="1.0px"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"/>
    </cn.nubia.component.RefreshLayout>

    <cn.nubia.component.ErrorHintView
        android:id="@+id/hintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>