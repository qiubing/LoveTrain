<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_comment_title_content_windows"
    android:orientation="vertical">


    <include
        android:id="@+id/admin_signin_title"
        layout="@layout/include_back_title_item_layout" />

    <include
        android:id="@+id/loading_failed_signin"
        layout="@layout/layout_loading_failed"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginTop="10dp" />

    <include
        android:id="@+id/network_unusable_signin"
        layout="@layout/layout_network_unusable"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/manager_rate_paddingTop" />

    <cn.nubia.component.RefreshLayout
        android:id="@+id/evaluate_refreshLayout_signin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/admin_signIn_manage_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>
    </cn.nubia.component.RefreshLayout>
</LinearLayout>