<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">
        <TextView
            android:id="@+id/settings_update_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/item_text_size"
            android:textColor="@color/text_color"
            android:text="@string/soft_update_dialog_tilte"/>
        <TextView
            android:id="@+id/settings_update_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/settings_update_dialog_title"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/item_text_size"
            android:layout_marginRight="@dimen/button_margin_right"
            android:textColor="@color/toolbar_bg"
            android:text="@string/soft_update_cancel"/>
    </RelativeLayout>

    <View
        android:id="@+id/item_common_cource_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_thin"
        android:layout_below="@id/layout_title"
        android:background="@color/toolbar_bg"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/item_common_cource_divider">
        <TextView
            android:id="@+id/settings_update_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin_top"
            android:layout_marginBottom="@dimen/title_margin_bottom"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize16" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cn.nubia.component.SwitchButton
                android:id="@+id/auto_update_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dialog_text_margin_right"
                />
            <TextView
                android:id="@+id/auto_update_setting_text"
                android:paddingTop="@dimen/dialog_title_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14"
                android:layout_toLeftOf="@id/auto_update_switch"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="@string/soft_update_auto_tips"/>
        </RelativeLayout>
        <Button
            android:id="@+id/update_now_button"
            style="@style/update_now_button"
            android:text="@string/soft_updating"
            android:layout_marginBottom="@dimen/login_edit_text_margin_left"/>
        <!--<ProgressBar-->
            <!--android:id="@+id/downloading_progress_bar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_thick"-->
            <!--android:max="100"-->
            <!--android:layout_marginLeft="@dimen/login_edit_text_margin_left"-->
            <!--android:layout_marginRight="@dimen/login_edit_text_margin_right"-->
            <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
            <!--android:progressDrawable="@drawable/download_progress_bar"-->
            <!--/>-->
    </LinearLayout>

</RelativeLayout>