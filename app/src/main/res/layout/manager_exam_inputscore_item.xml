<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/manager_exam_inputscore_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/manager_score_hight"
        android:text="testa"
        android:textColor="@color/bigtitle" />

    <TextView
        android:id="@+id/manager_exam_inputscore_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/manager_score_hight"
        android:layout_below="@+id/manager_username"
        android:text="ak"
        android:textColor="@color/bigtitle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/manager_score_image_hight"
        android:layout_alignParentRight="true">

        <EditText
            android:id="@+id/manager_exam_inputscore_score"
            android:layout_width="match_parent"
            android:layout_height="@dimen/manager_score_image_hight"
            android:background="@drawable/editview_selector"
            android:hint="请输入成绩"
            android:singleLine="true"
            android:textColor="@color/edit_text"
            android:textColorHint="@color/edit_text_hint" />
    </LinearLayout>

</RelativeLayout>
