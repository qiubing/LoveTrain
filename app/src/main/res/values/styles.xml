<resources>

    <!--胡立加-->
    <style name="toolbar_button_style">
        <item name="android:textSize">@dimen/item_bottom_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/toolbar_bottom_top_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_bottom_bottom_padding</item>
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">@dimen/item_bottom_height</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/item_bgn_color_selector</item>
        <item name="android:drawablePadding">@dimen/toolbar_bottom_radio_padding</item>
    </style>

    <style name="CustomBigLoginButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/toolbar_bg</item>
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <!--吕康-->
    <style name="login_button">
        <item name="android:background">@color/toolbar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/login_edit_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_edit_text_margin_right</item>
        <item name="android:layout_height">@dimen/login_item_height</item>
    </style>
    <style name="login_edit_text_style">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/login_edit_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_edit_text_margin_right</item>
        <item name="android:paddingLeft">@dimen/login_edit_text_inner_padding</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--江禹-->
    <style name="judge_rating_text_style">
        <item name="android:layout_width">@dimen/judge_text_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/listitem_margin_width_small</item>
        <item name="android:layout_marginRight">@dimen/listitem_margin_width_small</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>
    <style name="judge_rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:layout_marginRight">@dimen/listitem_margin_width_small</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>
    <style name="no_border_text_style">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listitem_height</item>
        <item name="android:paddingLeft">@dimen/login_edit_text_inner_padding</item>
        <item name="android:background">@color/background_white</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="password_image_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/password_imagesize</item>
        <item name="android:layout_height">@dimen/password_imagesize</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/listitem_margin_width</item>
        <item name="android:src">@mipmap/icon_login_pwd</item>

    </style>

    <!--何逍-->
    <style name="client_my_head_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="client_my_imageView_style">
        <item name="android:layout_marginLeft">@dimen/class_item_margin_left</item>
        <item name="android:layout_width">@dimen/client_my_image_size</item>
        <item name="android:layout_height">@dimen/client_my_image_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="client_my_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/client_my_textView</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">@dimen/textSize16</item>
        </style>

    <style name="client_my_head_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

    <style name="client_my_forwardImageView_style">
        <item name="android:layout_width">@dimen/client_my_forward_image_size</item>
        <item name="android:layout_height">@dimen/client_my_forward_image_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>






    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="contentrealm">
        <item name="android:layout_marginTop">@dimen/item_smallverticalmargin</item>
        <item name="android:layout_marginBottom">@dimen/item_smallverticalmargin</item>
        <!--<item name="android:layout_marginLeft">@dimen/item_smallhorizontalmargin</item>-->
        <!--<item name="android:layout_marginRight">@dimen/item_smallhorizontalmargin</item>-->
    </style>

    <style name="itemtitle">
        <item name="android:layout_marginTop">@dimen/item_smallverticalmargin</item>
        <item name="android:layout_marginBottom">@dimen/item_smallverticalmargin</item>
        <item name="android:textSize">@dimen/itemname_textsize</item>
    </style>

    <style name="itemcontent">
        <item name="android:layout_marginTop">@dimen/item_smallverticalmargin</item>
        <item name="android:layout_marginBottom">@dimen/item_smallverticalmargin</item>
        <item name="android:layout_marginLeft">@dimen/item_normalhorizontalmargin</item>
        <item name="android:textSize">@dimen/itemcontent_textsize</item>
    </style>

    <style name="CustomBigOrangeButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/custom_small_orange_btn_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_weight</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10.0dip</item>
    </style>



    <style name="edit_text_style">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_edit_text_height</item>
        <item name="android:layout_marginLeft">@dimen/login_edit_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_edit_text_margin_right</item>
        <item name="android:paddingLeft">@dimen/login_edit_text_inner_padding</item>
        <item name="android:background">@drawable/editview_selector</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_edit_text_height</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="edittext_style_multiline">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_multi</item>
        <item name="android:layout_marginLeft">@dimen/login_edit_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_edit_text_margin_right</item>
        <item name="android:paddingLeft">@dimen/login_edit_text_inner_padding</item>
        <item name="android:background">@drawable/editview_selector</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">left|top</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textSize">@dimen/textSize14</item>
    </style>


    <style name="adapter_item_outside_layout_padding_style">
        <item name="android:paddingLeft">@dimen/item_outside_left_or_right_padding</item>
        <item name="android:paddingTop">@dimen/item_outside_top_padding</item>
        <item name="android:paddingRight">@dimen/item_outside_left_or_right_padding</item>
        <item name="android:paddingBottom">@dimen/item_outside_bottom_padding</item>
    </style>

    <style name="adapter_item_inside_layout_padding_style">
        <item name="android:paddingLeft">@dimen/item_inside_left_or_right_padding</item>
        <item name="android:paddingTop">@dimen/item_inside_top_or_bottom_padding</item>
        <item name="android:paddingRight">@dimen/item_inside_left_or_right_padding</item>
        <item name="android:paddingBottom">@dimen/item_inside_top_or_bottom_padding</item>
    </style>

    <style name="item_smart_icon_imageview_style">
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">@dimen/item_icon_image_width</item>
        <item name="android:layout_height">@dimen/item_icon_image_height</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="item_layout_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff525252</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="item_operation_stytle">
        <item name="android:textSize">16.0dip</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
    </style>

    <style name="item_operation_attention_style" parent="@style/item_operation_stytle">
        <item name="android:textSize">@dimen/dialog_default_btn_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/item_operation_attention</item>
    </style>

    <style name="item_flag_attention_style">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="item_layout_download">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff9f9f9f</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_layout_content">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff9f9f9f</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--admin class info-->
    <style name="class_info_item_detail_outside_layout_padding_style">
        <item name="android:paddingLeft">@dimen/item_outside_left_or_right_padding</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">@dimen/item_outside_left_or_right_padding</item>
        <item name="android:paddingBottom">5.0dip</item>
    </style>

    <style name="item_layout_residue_gift">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff9f9f9f</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_view_input_style">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/editview_selector</item>
        <item name="android:textSize">@dimen/itemcontent_textsize</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
    </style>

    <style name="PromptDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>
